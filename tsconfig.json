{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",      // Ensures compiled files go to "dist/"
    "rootDir": "src",      // Ensures TypeScript compiles from "src/"
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
}
